<div class="container mt-3">
    {{#each this}}
    <div class="card align-items-center bg-light">
        <div class="card-block text-center pb-1">
            <h5 class="card-title">{{restaurant.name}}</h5>
            <h6 class="card-subtitle mb-2 text-muted">Reviewed by: {{user.username}} on {{format_date created_at}}</h5>          
            <ul>
                <li>Overall Rating: {{overall_rating}}</li>
                <li>Atmosphere Rating: {{atmosphere_rating}}</li>
                <li>Food Rating: {{food_rating}}</li>
                <li>Service Rating {{service_rating}}</li>
            </ul>
            <p class="card-text bg-light">Review: {{review}}</p>
        </div>
        <div class="mb-2">
            <a href="/dashboard/edit/{{id}}" type="submit" class="btn btn-primary" id="edit-btn">Edit Review</a>
            
        </div>
    </div>
    {{/each}}
</div>


